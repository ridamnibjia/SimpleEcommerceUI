<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1b262c"
    app:titleTextColor="#fff"
    app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
    android:id="@+id/tool">
</androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relative"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/mem"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Buy Exclusive Clothes Handpicked"
    android:fontFamily="sans-serif-black"
    android:layout_marginTop="50dp"
    android:textStyle="bold"
    android:textSize="20dp"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"/>
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    android:layout_below="@+id/relative"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features Clothes"
        android:fontFamily="sans-serif-black"
        android:layout_margin="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginTop="30dp">
<androidx.cardview.widget.CardView
    android:layout_width="120dp"
    android:layout_height="180dp"
    app:cardElevation="3dp"
    android:id="@+id/card1">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/men1"
    android:scaleType="fitCenter"
        android:paddingRight="60dp"
        android:id="@+id/pic"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="20dp"
        android:text="White Shirt"
        android:textSize="11dp"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="#00bcd4"
        android:text="Buy $10"
        android:textColor="#fff"
        android:textSize="10dp"
        android:layout_marginTop="154dp"
        android:layout_marginLeft="23dp"/>


</androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="180dp"
            app:cardElevation="3dp"
            android:layout_toRightOf="@+id/card1"
            android:id="@+id/card2">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:src="@drawable/men2"
                android:scaleType="fitCenter"
                android:paddingRight="60dp"
                android:id="@+id/pic1"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="20dp"
                android:text="Creme Pants"
                android:textSize="11dp"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="#00bcd4"
                android:text="Buy $40"
                android:textColor="#fff"
                android:textSize="10dp"
                android:layout_marginTop="154dp"
                android:layout_marginLeft="23dp"/>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="180dp"
            app:cardElevation="3dp"
            android:layout_toRightOf="@+id/card2"
            android:id="@+id/card3">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:src="@drawable/men1"
                android:scaleType="fitCenter"
                android:paddingRight="60dp"
                android:id="@+id/pic2"
                />
            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="135dp"
                android:layout_marginLeft="20dp"
                android:text="White Shirt"
                android:textSize="11dp"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="#00bcd4"
                android:text="Buy $20"
                android:textColor="#fff"
                android:textSize="10dp"
                android:layout_marginTop="154dp"
                android:layout_marginLeft="23dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>